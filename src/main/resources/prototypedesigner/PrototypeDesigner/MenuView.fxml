<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<MenuBar xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="prototypedesigner.PrototypeDesigner.controller.MenuController">
  <menus>
    <Menu mnemonicParsing="false" text="File">
      <items>
            <MenuItem mnemonicParsing="false" onAction="#newProject" text="New Project" />
            <MenuItem mnemonicParsing="false" onAction="#open" text="Open Project" />
        <MenuItem mnemonicParsing="false" onAction="#save" text="Save Project" />
            <MenuItem mnemonicParsing="false" onAction="#saveAs" text="Save As..." />
            <Menu mnemonicParsing="false" text="Export">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#exportBom" text="BOM as Text" />
                <MenuItem mnemonicParsing="false" onAction="#exportSchematics" text="Schematics as PNG" />
              </items>
            </Menu>
            <MenuItem mnemonicParsing="false" onAction="#exit" text="Close" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Edit">
      <items>
        <MenuItem mnemonicParsing="false" text="Project Info" onAction="#projectInfo" />
        <MenuItem mnemonicParsing="false" text="Delete" />
      </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Help">
      <items>
        <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
      </items>
    </Menu>
  </menus>
</MenuBar>
